---
interface Props{
    title:string,
    link: string,
}

const {title, link} = Astro.props
---

<div class="bg-grey-700 rounded-lg w-full h-[45px] flex justify-center pt-2.5 mt-4 hover:cursor-pointer hover:bg-green-700 text-white hover:text-grey-700 hover:transition-all hover:ease-in-out">
    <a href={link} class=" font-bold text-center">{title}</a>
</div>